{
  "version": 2,
  "builds": [
    {
      "src": "myapp/package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "dist/myapp/browser",
        "installCommand": "cd myapp && npm install --legacy-peer-deps",
        "buildCommand": "cd myapp && npm run build"
      }
    }
  ],
  "routes": [
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot))", "dest": "/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
